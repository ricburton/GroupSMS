<%= form_for(@user) do |f| %>
<fieldset>
  <legend>Sign Up Today</legend>
  <% if @user.errors.any? %>
  <div id="error_explanationx" class="alert-message block-message error">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :number %>  
    <div class="input">
      <%= f.text_field :number %>
    </div>
  </div>
  <div class="clearfix" style="display:none;">
    <%= f.label :group_id %>
    <div class="input">
      <%= f.text_field :group_id %>
    </div>
  </div>
    <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="action">
    <%= f.submit :id => :go, :value => 'Sign Up', :name => :go, :class => 'btn primary' %>
  </div>
</fieldset>
<% end %>

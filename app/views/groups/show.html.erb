<div class="row">
  <div class="span3 columns">
    <h3>Your groups</h3>
    <%= link_to 'New Group', new_group_path, :class => 'btn small success' %>
    <div class="list-groups">
      <ul class="unstyled">

        <% @user_groups.each do |g| %>
        <% if g.id == @group.id %>
        <li style="background:red"><%= g.name %> <%= link_to 'Go', g %></li>
        <% else %>
        <li><%= g.name %> <%= link_to 'Go', g %></li>
        <% end %>
        <% end %>

      </ul>
    </div>

  </div>
  <div class="span10 columns" style="background:">
    <h2><%= @group.name %>: Latest Messages</h2>
    
    <div style="display:none">
    <fieldset>
      <div class="clearfix">
        <%= form_for(@message) do |f| %>
        <% if @message.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>
          <ul>
            <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    </fieldset>    


    <div class="field">
      <%= f.text_area :message, :class => "xxlarge disabled", :rows => 5, :cols => "", :style => "resize:none" %>
    </div>

    <span class="help-block" style="margin-top:6px">
      You will be able to send messages from the web soon.
      <span style="float:right">
        <%= f.submit %>
      </span>
    </span>


    <% end %>
    </div>

    <div class="messages clearfix">

<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'bootstrap-1.0.0.min.css', :media => 'screen' %>
  <script src="http://code.jquery.com/jquery-1.5.2.min.js"></script>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body style="padding-top:50px;">
  <!-- Topbar
  ================================================== -->
  <div class="topbar-wrapper" style="z-index: 5;">
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <!--<h3><a href="#">Project Name</a></h3>-->
          <ul>
            <li class="active"><%= link_to 'Home', new_user_path %></li>

            <li><a href="#">Link</a></li>
            <li><a href="#">Link</a></li>
            <li><%= link_to 'See All Users', users_path %></li>
          </ul>

          <ul class="nav secondary-nav">
            <li class="menu">
              <a href="#" class="menu">My Account</a>
              <ul class="menu-dropdown">
                <li><a href="#">Secondary link</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li><a href="#">Another link</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div><!-- /fill -->
    </div><!-- /topbar -->
  </div><!-- /topbar-wrapper -->


  <div class="container" style="padding-top:15px">
    <% flash.each do |key, value| %>
    <div class="alert-message success <%= key %>">
      <%= value %>
    </div>
    <% end %>


    <%= yield %>
  </div>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>

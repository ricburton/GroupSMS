<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'bootstrap-1.0.0.min.css', :media => 'screen' %>
  <script src="http://code.jquery.com/jquery-1.5.2.min.js"></script>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body style="padding-top:40px;">
  <!-- Topbar   
  ================================================== -->
  <div class="topbar-wrapper" style="z-index: 5;">
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <!--<h3><a href="#">Project Name</a></h3>-->
          <ul>
            <% if signed_in? %>
            <li><%= link_to 'Home', :controller => "users", :action => "show", :id => current_user.id %></li>
            <% else %>
            <li class="active"><%= link_to 'Home', new_user_path %></li>
            <% end %>
        

          </ul>

          <ul class="nav secondary-nav">
              <% if signed_in? %>
                <% if is_admin? %>
                <li><%= link_to 'All Users', users_path %></li>
                <li><%= link_to 'All Messages', messages_path %></li>
                <li><%= link_to 'All Groups', groups_path %></li>
                <li><%= link_to 'All Memberships', memberships_path %></li>
                <% end %>
              <li><a>Current User: <%= current_user.name %></a></li>
              <!-- todo change current user link-->
              
              <li><%= link_to 'My Account', edit_user_path(current_user) %></li>
              <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
              <% else %>
              <li style="padding-right:30px"><%= link_to "Sign in", signin_path %></li> 
              <% end %>
          </ul>
        </div>
      </div><!-- /fill -->
    </div><!-- /topbar -->
  </div><!-- /topbar-wrapper -->


  <div class="container" style="padding-top:15px">
    <% flash.each do |key, value| %>
    <div class="alert-message success <%= key %>">
      <%= value %>
    </div>
    <% end %>


    <div style="padding-bottom:30px"><%= yield %></div>
  
  <!-- debug(params) if Rails.env.development? -->
  </div>
  
</body>
</html>

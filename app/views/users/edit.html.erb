  <script type="text/javascript">
  
  window.onload = function() {
    document.getElementById('user_name').focus();
  }

  </script>

<%= form_for @user do |f| %>
<fieldset>
  <legend>Your account</legend>

  <%= render 'shared/error_messages', :object => f.object %>

  <div class="clearfix">
    <%= f.label "First Name" %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label "Mobile Number" %> 
    <div class="input">
      <%= f.text_field :number %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="actions" style="background:white;border:none;">
    <%= f.submit :id => :go, :value => 'Save changes', :name => :go, :class => 'btn success' %>
  </div>
</fieldset>
<% end %>


<fieldset>
  <div class="actions" style="background:white;border:none;">
<%= link_to 'Delete my account.', @user, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger' %>
  </div>
</fieldset>

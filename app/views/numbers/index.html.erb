<h1>Listing numbers</h1>

<table>
  <tr>
    <th>Number ID</th>
    <th>Inbound num</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @numbers.each do |number| %>
  <tr>
    <td><%= number.id %></td>
    <td><%= number.inbound_num %></td>
    <td><%= link_to 'Show', number %></td>
    <td><%= link_to 'Edit', edit_number_path(number) %></td>
    <td><%= link_to 'Destroy', number, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Number', new_number_path, :class => 'btn small success' %>

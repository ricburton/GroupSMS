<h1>Editing group</h1>


<%= form_for(@group) do |f| %>
<fieldset>
  <legend>Edit your group</legend>
  <%= render 'shared/group_error_messages', :object => f.object %>  
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
    <%= f.text_field :name %>
  </div>
  </div>
  <div class="actions">
    <%= f.submit :value => 'Create your group', :class => 'btn success'%> <!-- test for if they already have a group...-->
  </div>
<% end %>


<%= link_to 'Show', @group %> |
<%= link_to 'Back', groups_path %>

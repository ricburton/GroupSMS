      <span class="help-block" style="margin-top:6px">
        This button will work soon.
      </span>
      <!-- todo make this work -->
    </div>


  </div>
  <div class="span3 columns">
    <h3>Group Members</h3>
    <div><%= link_to 'Edit group', edit_group_path(@group), :class => 'btn small success' %></div>
    <ul class="unstyled">

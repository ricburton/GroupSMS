<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css">
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= javascript_include_tag  "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" %>
  <%= javascript_include_tag "jquery-rails.js" %>
  <%= csrf_meta_tag %>
  <script>
  function remove_fields(link) {
    $(link).previous("input[type=hidden]").value = "1";
    $(link).up(".fields").hide();
  }
  </script>
</head>
<body style="padding-top:40px;">
  <!-- Topbar   
  ================================================== -->
  <div class="topbar-wrapper" style="z-index: 5;">
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <!--<h3><a href="#">Project Name</a></h3>-->

          <% if signed_in? %>
          <ul>
            <li><h3 style="color:white"><%= link_to 'GroupHug' %></h3>
  <% if false %>            
<% if current_user.memberships == 0 %>
<h3 style="color:white"><%= link_to 'GroupHug', :controller => "users", :action => "show", :id => current_user.id %></h3>
<% else %>
<h3 style="color:white"><%= link_to 'GroupHug', :controller => "groups", :action => "show", :id => current_user.groups.first.id %></h3>

<!-- todo: destroy memberships when groups are destroyed //-->

<% end %>
<% end %>
              
              
            </li>
          </ul>
          <% else %>


          <%= form_for(:session, :url => sessions_path) do |f| %>

          <ul>
            <li><h3 style="color:white"><%= link_to 'GroupHug', root_path %></h3></li>
            <li><div class="inline-inputs" style="color:white;float:left">
              Number: <%= f.text_field :number %> Password: <%= f.password_field :password %>

              <%= f.submit :value => 'Sign In', :class => 'btn primary', :style => 'width:110px; line-height:18px;' %>

            </div></li></ul>

            <% end %>

            <% end %>



            <ul class="nav secondary-nav">
              <% if signed_in? %>
              <% if is_admin? %>
              <li><%= link_to 'All Users', users_path %></li>
              <li><%= link_to 'All Messages', messages_path %></li>
              <li><%= link_to 'All Groups', groups_path %></li>
              <li><%= link_to 'All Memberships', memberships_path %></li>
              <% end %>
              <li><a>Current User: <%= current_user.name %></a></li>
              <!-- todo change current user link-->

              <li><%= link_to 'My Account', edit_user_path(current_user) %></li>
              <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
              <% end %>
            </ul>
          </div>
        </div><!-- /fill -->
      </div><!-- /topbar -->
    </div><!-- /topbar-wrapper -->


    <div class="container" style="padding-top:15px">
      <% flash.each do |key, value| %>
      <div class="alert-message success <%= key %>">
        <%= value %>
      </div>
      <% end %>


      <div style="padding-bottom:30px"><%= yield %></div>

      <!-- debug(params) if Rails.env.development? -->
    </div>

  </body>
  
  <!-- todo: add getclicky tracking-->
  
  </html>

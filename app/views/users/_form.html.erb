<%= form_for(@user) do |f| %>
<fieldset>
  <legend>Sign Up Today</legend>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="clearfix">
    <%= f.label "First Name" %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label "Mobile Number" %>
    <div class="input">
      <%= f.text_field :number %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="clearfix" style="display:none">
    <%= f.text_field :registered, :value => false %> <!-- todo: fix this horrible hack -->
  </div>
  <div class="actions">
    <%= f.submit :id => :go, :value => 'Sign Up', :name => :go, :class => 'btn large success' %>
  </div>
</fieldset>
<% end %>

<!DOCTYPE html>
<html>
<head>
  <title>
    <% if signed_in? %>
    GroupHug - <%= current_user.name %>
    <% else %>
    <%= @title %>
    <% end %>
  </title>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <% if false %>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css">
  <%= javascript_include_tag  "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js" %>
  <% end %>
  <%= csrf_meta_tag %>
  <script>
  function remove_fields(link) {
    $(link).previous("input[type=hidden]").value = "1";
    $(link).up(".fields").hide();
  }
  </script>
</head>
<body style="padding-top:40px;">
  <!-- Topbar   
  ================================================== -->
  <div class="topbar-wrapper" style="z-index: 5;">
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <% if signed_in? %>
          <ul>
            <li><h3 style="color:white"><%= link_to 'GroupHug', root_path %></h3></li>
          </ul>
          <ul class="nav">
            <% if current_user.memberships.count > 0 %>
            <li class="<%= "active" if @active_page == "UserHome" %>"><%= link_to 'My Groups', root_path %></li>
            <% end %>
          </ul>
          <% else %>
          <ul>
            <li><h3 style="color:white"><%= link_to 'GroupHug', root_path %></h3></li>
            <% if false %>
            <li>
              <%= form_for(:session, :url => sessions_path) do |f| %>
              <div class="inline-inputs" style="color:white;float:left">
                Number: <%= f.text_field :number %> Password: <%= f.password_field :password %>
                <%= f.submit :value => 'Sign In', :class => 'btn primary', :style => 'width:110px; line-height:18px;' %>
                <% end %>
              </div>
            </li>
            <% end %>
          </ul>



          <% end %>



          <ul class="nav secondary-nav">
            <% if signed_in? %>
            <% if is_admin? %>
            <li><%= link_to 'All Users', users_path %></li>
            <li><%= link_to 'All Messages', messages_path %></li>
            <li><%= link_to 'All Groups', groups_path %></li>
            <li><%= link_to 'All Memberships', memberships_path %></li>
            <% end %>

            <li class="<%= "active" if @active_page == "EditUser" %>"><%= link_to 'My Account', edit_user_path(current_user) %></li>
            <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
            <% else %>
            <% if @active_page == "signin" %>
            <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
            <% end %>
            <% end %>
          </ul>
        </div>
      </div><!-- /fill -->
    </div><!-- /topbar -->
  </div><!-- /topbar-wrapper -->


  <div class="container" style="padding-top:0px">

    <div style="padding-bottom:30px"><%= yield %></div>

  </div>

</body>

<!-- todo: add getclicky tracking-->

</html>

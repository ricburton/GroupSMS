<script type="text/javascript">
window.onload = function() {
  document.getElementById('user_name').focus();
}
</script>


<div class="modal" style="position: relative; top: auto; left: auto; margin: 0 auto; z-index: 1; width:450px;margin-top:25px;">
<%= form_for @user do |f| %>

    <div class="modal-header" style="padding:10px 15px 0px 15px">
  
<span style="float:right;margin-top:25px"><%= link_to 'Delete my account', @user, :confirm => 'Are you sure?', :method => :delete, :class => '', :style => 'color:red;font-size:11px' %></span>
      <h1 style="padding-top:10px">Your account</h1>
      
    </div>
    <div class="modal-body">
      <fieldset style="background-color:#fff">
    <%= render 'shared/error_messages', :object => f.object %>

    <div class="clearfix">
      <%= f.label "First Name" %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label "Mobile Number" %> 
      <div class="input">
        <%= f.text_field :number %>
      </div>
    </div>
    <div class="clearfix">
      <!-- TODO fix password editing.-->
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>
  </div>
  <div class="modal-footer" style="margin-bottom:-15px">
    <%= f.submit :id => :go, :value => 'Save changes', :name => :go, :class => 'btn large success', :style => 'font-size:20px' %>
  </div>
  <% end %>
</div>

<div class="modal" style="position: relative; top: auto; left: auto; margin: 0 auto; z-index: 1; width:450px;">
  <div class="modal-header">
    <h2>Sign Up Now</h2>
  </div>
  <%= form_for(@user) do |f| %>
  <div class="modal-body">
    <%= render 'shared/error_messages', :object => f.object %>

    <div class="clearfix">
      <%= f.label "First Name" %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label "Mobile Number" %>
      <div class="input">
        <%= f.text_field :number %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>
    <%= f.hidden_field :registered, :value => false %>
  </div>
  <div class="modal-footer" style="margin-bottom:-17px">
    <%= f.submit :id => :go, :value => 'Sign Up', :name => :go, :class => 'btn large success', :style => 'font-size:20px' %>
    <% end %>
  </div>
  
</div>


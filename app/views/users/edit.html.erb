<script type="text/javascript">
window.onload = function() {
  document.getElementById('user_name').focus();
}
</script>


<div class="modal" style="position: relative; top: auto; left: auto; margin: 0 auto; z-index: 1;width:580px;margin-top:55px;">
<%= form_for @user do |f| %>


  <fieldset style="background-color:#fff">
    <div class="modal-header" style="padding:0px 15px 0px 18px">
      <h1>Your account<span style="float:right;margin-bottom:15px"> <%= link_to 'Delete my account', @user, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger' %></span></h1>
    </div>
    <div class="modal-body">
    <%= render 'shared/error_messages', :object => f.object %>

    <div class="clearfix">
      <%= f.label "First Name" %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label "Mobile Number" %> 
      <div class="input">
        <%= f.text_field :number %>
      </div>
    </div>
    <div class="clearfix">
      <!-- TODO fix password editing.-->
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>
  </div>
  <div class="modal-footer" style="margin-bottom:-15px">
    <%= f.submit :id => :go, :value => 'Save changes', :name => :go, :class => 'btn large success', :style => 'font-size:20px' %>
  </div>
  <% end %>
</div>
